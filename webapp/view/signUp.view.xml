<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="inc.trng.ZTimeAppInkathon.controller.signUp" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title" showHeader='false' enableScrolling='false'>
				<content>
					<Image src="incture_logo.png" width="10%" class="logo"></Image>
					<Text text="Attendance Portal" class="Header"></Text>
					<VBox class='sapUiLargeMarginBegin sapUiLargeMarginBottom' fitContainer="true" justifyContent="Center" alignItems="Center">
						<Text text="Sign Up" class="pageHeader"></Text>
						<Input class='inputLogin' width='18em' placeholder='Name'/>
						<Input class='inputLogin' width='18em' type='Password' placeholder='Designation'/>
						<Input class='inputLogin' width='18em' placeholder='Email'/>
						<Input class='inputLogin' width='18em' type='Password' placeholder='Contact Number'/>
						<Input class='inputLogin' width='18em' type='Password' placeholder='Password'/>
						<Input class='inputLogin' width='18em' type='Password' placeholder='Confirm Password'/>
						<Button class='btnLogin' width='20em' text='Proceed'></Button>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>